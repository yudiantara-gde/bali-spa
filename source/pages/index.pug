extends template/default

block variables
	- var meta_sitename = 'Stater Kicks with gulp, sass, and pug - http://yudiantara-gde.github.io/'
	- var meta_title 	= 'Stater Kicks with gulp, sass, and pug'
	- var meta_desc  	= 'Front End Stater Kick build using gulp, sass and pug'
	- var meta_keyword 	= 'stater kick, stater kick using pug'
	- var meta_url		= 'http://localhost:3000/index.html'
	- var meta_img		= 'http://localhost:3000/img/logo.png'
	- var pageClass 	= 'p-home'
	- var header    	= ''

block content
	//ex : include component
	include ../blocks/components/swiper/home-heroes
		


block script
	script(src='js/swiper.js')
	script.
		var mySwiper = new Swiper('.balispa-heroes .swiper-container', {
			spaceBetween: 15,
			loop: true,pagination: {
				el: '.swiper-pagination',
			},
			navigation: {
				nextEl: '.swiper-button-next',
				prevEl: '.swiper-button-prev',
			},
		});